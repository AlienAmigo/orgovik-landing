{
  "name": "orgovik-landing",
  "version": "1.0.0",
  "description": "AlienAmigo StartKit",
  "main": "gulpfile.js",
  "type": "module",
  "scripts": {
    "start": "gulp",
    "build": "gulp build --build",
    "bemlint": "bemlint build/*.html --mod='--'",
    "puglint": "glob-exec \"src/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\" --color",
    "stylelint": "stylelint \"src/scss/**/*.scss\" --color",
    "eslint": "eslint \"src/js/**/*.{js,jsx,ts,tsx}\" --color",
    "stylelint-check": "stylelint-config-prettier-check",
    "stylelint-scss-check": "stylelint-config-prettier-scss-check",
    "lint-staged": "lint-staged --no-stash",
    "favicon": "gulp favicon",
    "fonts": "gulp fontsTask",
    "vendors": "gulp vendors",
    "pngSprite": "gulp pngSpriteTask",
    "svgSprite": "gulp svgSpriteTask",
    "zip": "gulp deployZip --build",
    "ftp": "gulp deployFtp --build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "initDeploy": "npx gulp deploy",
    "deploy": "npm start deploy"
  },
  "author": "Peter Ryzhov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlienAmigo/AlienStartKit.git"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --color",
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.(css|scss|sass|less)": "stylelint --color"
  },
  "@commentDevDependencies": [
    "webp-converter не трогать! Работает только в версии 2.2.3"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "@prettier/plugin-pug": "2.5.2",
    "autoprefixer": "latest",
    "bemlint": "latest",
    "browser-sync": "latest",
    "del": "7.0.0",
    "eslint": "latest",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs": "^0.0.1-security",
    "glob-exec": "latest",
    "gulp": "latest",
    "gulp-clean-css": "latest",
    "gulp-concat": "^2.6.1",
    "gulp-dart-sass": "^1.1.0",
    "gulp-eslint": "latest",
    "gulp-file-include": "latest",
    "gulp-fonter": "latest",
    "gulp-fonter-fix": "latest",
    "gulp-group-css-media-queries": "latest",
    "gulp-if": "latest",
    "gulp-imagemin": "latest",
    "gulp-newer": "latest",
    "gulp-notify": "latest",
    "gulp-plumber": "latest",
    "gulp-postcss": "latest",
    "gulp-pug": "latest",
    "gulp-rename": "latest",
    "gulp-replace": "latest",
    "gulp-sass": "latest",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "latest",
    "gulp-ttf2woff2": "latest",
    "gulp-util": "latest",
    "gulp-version-number": "latest",
    "gulp-webp": "latest",
    "gulp-webp-html-nosvg": "latest",
    "gulp-webpcss": "latest",
    "gulp-zip": "latest",
    "gulp.spritesmith": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "merge-stream": "latest",
    "path": "^0.12.7",
    "postcss-animation": "latest",
    "postcss-flexbugs-fixes": "latest",
